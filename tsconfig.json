{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "es2015", // Establece el objetivo de compilaci√≥n a ES2015 o superior
    "lib": [
      "es2015",
      "dom"
    ], // Incluye las bibliotecas ES2015 y DOM
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}